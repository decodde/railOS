include top

header.navbar.navbar-expand.navbar-dark.flex-column.flex-md-row.bg-dark
    code.navbar-brand.mr-0.mr-md-2(href="#") railOS
    ul.navbar-nav.flex-row.ml-md-auto.d-none.d-md-flex
        li.nav-item.dropdown
            a.nav-item.nav-link.dropdown-toggle.mr-md-2(href="#",id="options",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false") #{lastname}
            div.dropdown-menu.dropdown-menu-right(aria-labelledby="options")
                a.dropdown-item(onclick="logout()") Logout

.container-fluid
    .row.flex-xl-nowrap
        .card.card-body.col-sm-3.col-md-3.col-xl-2.bg-dark(style="margin-bottom:0px !important;border-radius:0px !important")
            if role=="admin"|role=="ds"
              a.btn.btn-outline-info.text-info(href="/dashboard") Dashboard
              br
             
            //a.btn.btn-outline-info.text-info(data-toggle="collapse",data-target="#mgprice",aria-expanded="false",aria-control="mgprice") Manage Pricing
            //br
            //a.btn.btn-outline-info.text-info(data-toggle="collapse",data-target="#mgschedule",aria-expanded="false",aria-control="mgschedule") Manage Schedule
            //br
            a.btn.btn-outline-info.text-info(data-toggle="collapse",data-target="#tmanifest",aria-expanded="false",aria-control="tmanifest") Train Manifest
            br
            a.btn.btn-outline-info.text-info(href="/frontdesk") Frontdesk Page
            br
            a.btn.btn-outline-info.text-info(href="/customerdashboard") Customer Page



            
        main.col-sm-9.col-md-9.col-xl-8.py-md-3.pl-md-5.bg-white(role="main")
            .card.card-body#pt
                .collapse#mgprice(data-parent="#pt")
                .collapse#mgschedule(data-parent="#pt")
                .collapse.show#tmanifest(data-parent="#pt")
                    row
                        a.col-md-3.btn.btn-outline-info.text-info(data-toggle="collapse",data-target="#newmanifest",aria-expanded="false",aria-control="querymanifest") New Manifest
                        a.col-md-3.col-md-offset-1.btn.btn-outline-info.text-info(data-toggle="collapse",data-target="#querymanifest",aria-expanded="false",aria-control="querymanifest") Query Past Manifest
                    .card.card-body#boss
                        .collapse.show#newmanifest(data-parent="#boss")
                            .card
                                .card-header.card-header-primary.card-header-text
                                    .card-text
                                        h3.display-4.card-title New Manifest
                        .collapse#querymanifest(data-parent="#boss")
                            .card
                                .card-header.card-header-primary.card-header-text
                                    .card-text
                                        h3.display-4.card-title Query Manifest
                        


include scripts
script(type="text/javascript",src="../js/views-js/editor.js")